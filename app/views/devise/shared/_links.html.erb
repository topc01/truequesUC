<% if controller_name != 'sessions' %>
    <div class="field">
        <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "button is-link" %>
    </div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <div class="field">
        <%= link_to "Registrarse", new_registration_path(resource_name), class: "button is-link" %>
    </div>
<% end %>

<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <div class="field">
        <%= link_to "¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "button is-link" %>
    </div>
<% end %>

<% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <div class="field">
        <%= link_to "¿No recibiste instrucciones de confirmación?", new_confirmation_path(resource_name), class: "button is-link" %>
    </div>
<% end %>

<% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <div class="field has-text-centered">
        <%= link_to "¿No recibiste instrucciones de desbloqueo?", new_unlock_path(resource_name), class: "button is-link" %>
    </div>
<% end %>

<% if devise_mapping.omniauthable? %>
    <div class="field has-text-centered">
        <%- resource_class.omniauth_providers.each do |provider| %>
            <%= link_to "Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: "button is-link", data: { turbo: false } %>
        <% end %>
    </div>
<% end %>
